@model UpdateServiceDto

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<form method="post">
    <input type="hidden" asp-for="ServiceID" />
    <label>Hizmet Icon</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <br />
    <label>Hizmet başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <button class=" btn mb-1 btn-rounded btn-outline-success">Hizmeti Güncelleme</button>
</form>
